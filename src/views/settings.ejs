<%- include('partials/header') %>

<div class="page-header d-flex justify-content-between align-items-center">
    <h4 class="page-title mb-0">Settings</h4>
    <span class="text-muted small" id="settings-updated-at"></span>
</div>

<div class="row">
    <div class="col-12">
        <div class="alert alert-info">
            Template variables: <code>%name%</code>, <code>%age%</code>, <code>%birthdate%</code>
        </div>
    </div>
</div>

<% const canEditSettings = hasRole(['admin','superadmin']); %>
<form id="settings-form">
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Direct Message</h4>
            </div>
            <div class="card-body">
                <div class="form-group form-check">
                    <input type="checkbox" id="directMessageEnabled" class="form-check-input" <%= canEditSettings ? '' : 'disabled' %>>
                    <label class="form-check-label" for="directMessageEnabled">Send to phone number</label>
                </div>
                <div class="form-group">
                    <label for="directMessageTemplate">Template</label>
                    <textarea id="directMessageTemplate" rows="3" class="form-control" placeholder="Happy Birthday %name%!" <%= canEditSettings ? '' : 'disabled' %>></textarea>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Status</h4>
            </div>
            <div class="card-body">
                <div class="form-group form-check">
                    <input type="checkbox" id="statusEnabled" class="form-check-input" <%= canEditSettings ? '' : 'disabled' %>>
                    <label class="form-check-label" for="statusEnabled">Post to status</label>
                </div>
                <div class="form-group">
                    <label for="statusTemplate">Template</label>
                    <textarea id="statusTemplate" rows="3" class="form-control" placeholder="Selamat ulang tahun %name%!" <%= canEditSettings ? '' : 'disabled' %>></textarea>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Group Messages</h4>
            </div>
            <div class="card-body">
                <div class="form-group form-check">
                    <input type="checkbox" id="groupMessageEnabled" class="form-check-input" <%= canEditSettings ? '' : 'disabled' %>>
                    <label class="form-check-label" for="groupMessageEnabled">Send to group</label>
                </div>
                <div class="form-group">
                    <label for="groupMessageTemplate">Template</label>
                    <textarea id="groupMessageTemplate" rows="3" class="form-control" placeholder="Everyone say happy birthday to %name%!" <%= canEditSettings ? '' : 'disabled' %>></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label class="font-weight-bold">Search Group By Name</label>
                        <div class="d-flex mb-2">
                            <input type="text" id="groupSearchInput" class="form-control" placeholder="Nama Group" <%= canEditSettings ? '' : 'disabled' %>>
                            <button type="button" id="groupSearchBtn" class="btn btn-secondary ml-2" <%= canEditSettings ? '' : 'disabled' %>>Search</button>
                        </div>
                        <div id="groupSearchResults" class="border rounded p-2" style="height: 200px; overflow-y: auto;"></div>
                    </div>
                    <div class="col-md-6">
                        <label class="font-weight-bold">Saved Groups</label>
                        <div id="savedGroups" class="border rounded p-2" style="height: 200px; overflow-y: auto;"></div>
                        <p class="text-muted small mt-1">Check to enable sending to that group. Uncheck to exclude. Remove to delete.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="form-group form-check mb-0">
                    <input type="checkbox" id="sendOnStartupEnabled" class="form-check-input" <%= canEditSettings ? '' : 'disabled' %>>
                    <label class="form-check-label" for="sendOnStartupEnabled">Also send birthday messages on server startup</label>
                </div>
                <p class="text-muted small mt-1 mb-0">If enabled, the scheduler runs immediately when the server boots (in addition to midnight).</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">AI Chat Settings</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="aiApiToken">AI API Token</label>
                    <input type="password" id="aiApiToken" class="form-control" placeholder="Enter AI API token" <%= canEditSettings ? '' : 'disabled' %>>
                    <p class="text-muted small mt-1">API token for the AI chat feature</p>
                </div>
                <div class="form-group">
                    <label for="aiModelName">AI Model Name</label>
                    <select id="aiModelName" class="form-control" <%= canEditSettings ? '' : 'disabled' %>>
                        <option value="gemini-2.5-pro">gemini-2.5-pro</option>
                        <option value="gemini-2.5-flash">gemini-2.5-flash</option>
                        <option value="gemini-2.5-flash-lite">gemini-2.5-flash-lite</option>
                    </select>
                    <p class="text-muted small mt-1">AI model to use for chat functionality</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="d-flex align-items-center">
            <% if (canEditSettings) { %>
                <button type="submit" class="btn btn-primary">Save Settings</button>
            <% } else { %>
                <span class="text-muted small">You do not have permission to edit settings.</span>
            <% } %>
            <span id="settings-status" class="ml-3 text-muted small"></span>
        </div>
    </div>
</div>
</form>

<script>
    const canEditSettingsFlag = <%= canEditSettings ? 'true' : 'false' %>;

    async function loadSettings() {
        const res = await fetch('/api/settings');
        const data = await res.json();
        if (data && data.data) {
            const s = data.data;
            document.getElementById('directMessageEnabled').checked = s.directMessageEnabled;
            document.getElementById('directMessageTemplate').value = s.directMessageTemplate || '';
            document.getElementById('groupMessageEnabled').checked = s.groupMessageEnabled;
            document.getElementById('groupMessageTemplate').value = s.groupMessageTemplate || '';
            renderSavedGroups(s.selectedGroups || []);
            document.getElementById('statusEnabled').checked = s.statusEnabled;
            document.getElementById('statusTemplate').value = s.statusTemplate || '';
            document.getElementById('sendOnStartupEnabled').checked = s.sendOnStartupEnabled;
            document.getElementById('aiApiToken').value = s.aiApiToken || '';
            document.getElementById('aiModelName').value = s.aiModelName || 'gemini-2.5-pro';
            document.getElementById('settings-updated-at').textContent = s.updatedAt ? 'Updated at ' + new Date(s.updatedAt).toLocaleString() : '';
        }
    }

    function renderSavedGroups(groups) {
        const container = document.getElementById('savedGroups');
        container.innerHTML = '';
        if (!groups.length) {
            container.innerHTML = '<p class="text-muted small">No saved groups.</p>';
            return;
        }
        groups.forEach((g, idx) => {
            const row = document.createElement('div');
            row.className = 'saved-group-item flex items-center justify-between py-1';
            row.innerHTML = `
                <label class="flex items-center space-x-2">
                    <input type="checkbox" class="h-4 w-4 text-indigo-600 border-gray-300 rounded" data-name="${g.name || ''}" data-id="${g.id || ''}" checked>
                    <span>${g.name || '(no name)'} \u2013 ${g.id || ''}</span>
                </label>
                <button type="button" class="text-red-600 text-xs remove-saved-group" data-index="${idx}">Remove</button>
            `;
            container.appendChild(row);
        });

        container.querySelectorAll('.remove-saved-group').forEach(btn => {
            btn.addEventListener('click', () => {
                const index = parseInt(btn.dataset.index, 10);
                const groupsNow = Array.from(container.querySelectorAll('.saved-group-item input[type="checkbox"]')).map(cb => ({
                    name: cb.dataset.name,
                    id: cb.dataset.id,
                    checked: cb.checked
                }));
                groupsNow.splice(index, 1);
                renderSavedGroups(groupsNow);
            });
        });
    }

    function renderSearchResults(results) {
        const container = document.getElementById('groupSearchResults');
        container.innerHTML = '';
        if (!results.length) {
            container.innerHTML = '<p class="text-muted small">No groups found.</p>';
            return;
        }
        results.forEach(g => {
            const row = document.createElement('div');
            row.className = 'flex items-center space-x-2 py-1';
            row.innerHTML = `
                <input type="checkbox" class="group-search-item h-4 w-4 text-indigo-600 border-gray-300 rounded" data-name="${g.name}" data-id="${g.id}">
                <span>${g.name} \u2013 ${g.id}</span>
            `;
            container.appendChild(row);
        });
    }

    document.getElementById('groupSearchBtn').addEventListener('click', async () => {
        if (!canEditSettingsFlag) return;
        const name = document.getElementById('groupSearchInput').value.trim();
        if (!name) return;
        const res = await fetch('/api/groups/search', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name })
        });
        const data = await res.json();
        if (data.status === 'ok') {
            renderSearchResults(data.data || []);
        }
    });

    // Move selected search results into saved list
    document.getElementById('groupSearchResults').addEventListener('change', (e) => {
        if (!canEditSettingsFlag) return;
        if (!e.target.classList.contains('group-search-item')) return;
        const selected = Array.from(document.querySelectorAll('.group-search-item'))
            .filter(cb => cb.checked)
            .map(cb => ({ name: cb.dataset.name, id: cb.dataset.id }));
        if (selected.length) {
            // Merge with existing saved groups
            const existing = Array.from(document.querySelectorAll('.saved-group-item input[type="checkbox"]')).map(cb => ({
                name: cb.dataset.name,
                id: cb.dataset.id,
                checked: cb.checked
            }));
            const merged = [...existing];
            selected.forEach(s => {
                if (!merged.find(m => m.id === s.id)) {
                    merged.push({ ...s, checked: true });
                }
            });
            renderSavedGroups(merged);
        }
    });

    document.getElementById('settings-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        if (!canEditSettingsFlag) {
            return false;
        }
        const selectedGroups = Array.from(document.querySelectorAll('.saved-group-item input[type="checkbox"]'))
            .filter(cb => cb.checked)
            .map(cb => ({ name: cb.dataset.name, id: cb.dataset.id }));

        const payload = {
            directMessageEnabled: document.getElementById('directMessageEnabled').checked,
            directMessageTemplate: document.getElementById('directMessageTemplate').value,
            groupMessageEnabled: document.getElementById('groupMessageEnabled').checked,
            groupMessageTemplate: document.getElementById('groupMessageTemplate').value,
            selectedGroups,
            statusEnabled: document.getElementById('statusEnabled').checked,
            statusTemplate: document.getElementById('statusTemplate').value,
            sendOnStartupEnabled: document.getElementById('sendOnStartupEnabled').checked,
            aiApiToken: document.getElementById('aiApiToken').value,
            aiModelName: document.getElementById('aiModelName').value
        };

        const res = await fetch('/api/settings/update', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });
        const result = await res.json();
        const statusEl = document.getElementById('settings-status');
        if (result.status === 'ok') {
            statusEl.textContent = 'Saved!';
            statusEl.className = 'text-sm text-green-600';
            loadSettings();
        } else {
            statusEl.textContent = 'Failed to save settings.';
            statusEl.className = 'text-sm text-red-600';
        }
    });

    loadSettings();
</script>

<%- include('partials/footer') %>
