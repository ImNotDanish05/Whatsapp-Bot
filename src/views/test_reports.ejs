<%- include('partials/header') %>

<div class="page-header">
    <h4 class="page-title">Test Reports</h4>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Filters</h4>
            </div>
            <div class="card-body">
                <div class="form-row align-items-end">
                    <div class="form-group col-md-3">
                        <label for="phoneFilter">Filter by phone</label>
                        <input type="text" id="phoneFilter" class="form-control" placeholder="Filter by phone...">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="statusFilter">Status</label>
                        <select id="statusFilter" class="form-control">
                            <option value="">All Statuses</option>
                            <option value="success">Success</option>
                            <option value="failed">Failed</option>
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="dateFilter">Date</label>
                        <input type="date" id="dateFilter" class="form-control">
                    </div>
                    <div class="form-group col-md-3">
                        <button id="filterBtn" class="btn btn-primary btn-block">Filter</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th>Phone</th>
                                <th>Message</th>
                                <th>Response</th>
                                <th>Status</th>
                                <th>Type</th>
                                <th>Timestamp</th>
                            </tr>
                        </thead>
                        <tbody id="reports-table-body">
                            <!-- Rows will be inserted here by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
<script src="/js/test_reports.js"></script>
