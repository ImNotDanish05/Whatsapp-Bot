<%- include('partials/header') %>

<div class="px-4 py-6 sm:px-0">
    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">Dashboard</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4" role="alert">
                <p class="font-bold">Total Birthday Users</p>
                <p class="text-3xl"><%= totalBirthdays %></p>
            </div>
        </div>
        <div class="mt-8">
            <h2 class="text-xl font-semibold text-gray-700">Bot Status</h2>
            <p class="text-gray-600 mt-2">Scan the QR code below to connect the bot.</p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-4">
                <div>
                    <p>QR Status: <span id="home-qr-status" class="font-bold text-red-500">No</span></p>
                    <p>Client Ready: <span id="home-ready-status" class="font-bold text-red-500">No</span></p>
                </div>
                <div>
                    <img id="home-qr-image" class="bg-white p-3 rounded shadow inline-block hidden" alt="WhatsApp QR" />
                    <p id="home-qr-hint" class="text-sm text-gray-500 mt-2">Waiting for QR code...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
