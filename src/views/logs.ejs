<%- include('partials/header') %>

<div class="page-header">
    <h4 class="page-title">Logs</h4>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped" id="logs-table">
                        <thead>
                            <tr>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Sent At</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% logs.forEach(log => { %>
                                <tr>
                                    <td><%= log.phone %></td>
                                    <td>
                                        <span class="badge <%= log.status === 'success' ? 'badge-success' : 'badge-danger' %>">
                                            <%= log.status %>
                                        </span>
                                    </td>
                                    <td><%= dayjs(log.sentAt).format('DD MMM YYYY, HH:mm') %></td>
                                    <td><%= log.message %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        if (typeof $ !== 'undefined' && $.fn.DataTable) {
            $('#logs-table').DataTable({
                responsive: true,
                pageLength: 10,
                order: [],
                language: { search: "_INPUT_", searchPlaceholder: "Search logs..." },
                dom: '<"row mb-2"<"col-sm-6"l><"col-sm-6"f>>t<"row mt-2"<"col-sm-6"i><"col-sm-6"p>>'
            });
        }
    });
</script>
