<%- include('partials/header') %>

<div class="px-4 py-6 sm:px-0">
    <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-4">WhatsApp Bot Testing</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Send Message -->
            <div class="bg-gray-50 p-4 rounded-lg">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Send Test Message</h2>
                <form id="sendMessageForm">
                    <div class="mb-4">
                        <label for="phone" class="block text-sm font-medium text-gray-700">Target Phone Number</label>
                        <input type="text" name="phone" id="phone" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="+6281234567890">
                    </div>
                    <div class="mb-4">
                        <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                        <textarea name="message" id="message" rows="4" class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" placeholder="Enter your message"></textarea>
                    </div>
                    <button type="submit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Send Test Message
                    </button>
                </form>
            </div>

            <!-- Bot Status -->
            <div class="bg-gray-50 p-4 rounded-lg">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Live Bot Status</h2>
                <div id="bot-status">
                    <p>QR Scanned: <span id="qr-status" class="font-bold text-red-500">No</span></p>
                    <p>Client Ready: <span id="ready-status" class="font-bold text-red-500">No</span></p>
                    <p>Last Sent Message: <span id="last-sent-status" class="font-mono">N/A</span></p>
                    <p>Last Incoming Message: <span id="last-incoming-message" class="font-mono">N/A</span></p>
                </div>
                <div class="mt-4 space-x-2">
                    <button id="pingBtn" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Ping Bot</button>
                    <button id="cronBtn" class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">Simulate Daily Cron</button>
                </div>
            </div>
        </div>

        <!-- Console Log -->
        <div class="mt-6 bg-gray-900 text-white p-4 rounded-lg h-64 overflow-y-auto">
            <h2 class="text-xl font-semibold mb-2">Bot Logs</h2>
            <div id="log-console"></div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
