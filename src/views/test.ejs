<%- include('partials/header') %>

<div class="page-header">
    <h4 class="page-title">WhatsApp Bot Testing</h4>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Send Test Message</h4>
            </div>
            <div class="card-body">
                <form id="sendMessageForm">
                    <div class="form-group">
                        <label for="phone">Target Phone Number</label>
                        <input type="text" name="phone" id="phone" class="form-control" placeholder="+6281234567890">
                    </div>
                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea name="message" id="message" rows="4" class="form-control" placeholder="Enter your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Send Test Message</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Live Bot Status</h4>
            </div>
            <div class="card-body">
                <div id="bot-status" class="mb-3">
                    <p>QR Scanned: <span id="qr-status" class="fw-bold text-danger">No</span></p>
                    <p>Client Ready: <span id="ready-status" class="fw-bold text-danger">No</span></p>
                    <p>Last Sent Message: <span id="last-sent-status" class="font-monospace">N/A</span></p>
                    <p>Last Incoming Message: <span id="last-incoming-message" class="font-monospace">N/A</span></p>
                </div>
                <div class="text-center mb-3">
                    <h5 class="mb-2">Scan QR to Connect</h5>
                    <img id="qr-image" class="bg-white p-3 rounded shadow d-none" alt="WhatsApp QR" />
                    <p id="qr-hint" class="text-muted small mt-2">Waiting for QR code...</p>
                </div>
                <div class="d-flex gap-2">
                    <button id="pingBtn" class="btn btn-success">Ping Bot</button>
                    <button id="cronBtn" class="btn btn-warning text-white">Simulate Daily Cron</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Bot Logs</h4>
            </div>
            <div class="card-body bg-dark text-white" style="height: 260px; overflow-y: auto;">
                <div id="log-console" class="small"></div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
